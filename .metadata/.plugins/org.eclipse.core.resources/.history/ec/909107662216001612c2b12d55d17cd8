
public class BinaryToHex {

	private String[][] hexArray = new String[16][16];
	private String s;
	
	
	
	public String[][] BinaryToHex(String s)
	{
		String test = "00101100010111110000";
		String temp = "";
		int hexCount = 0;
		String hexa = "";
		// line to read String
		
		// Line to read and take 4 binary values and convert into hexa String
		for (int i = 0; i < test.length(); i += 4)
		{
			for (int j = 0; j < 4; j++)
			{
				temp += test.substring(i);
				if (j == 0);
				{
					if (temp == "1")
					hexCount += 8;
				}
				if (j == 1);
				{
					if (temp == "1")
					hexCount += 4;
				}
				if (j == 2);
				{
					if (temp == "1")
					hexCount += 2;
				}
				if (j == 3);
				{
					if (temp == "1")
					hexCount += 1;
				}
				temp = "";
			}
			if (hexCount == 0)
			{
				hexa += "0";
			}
			if (hexCount == 1)
			{
				hexa += "1";
			}
			if (hexCount == 2)
			{
				hexa += "2";
			}
			if (hexCount == 3)
			{
				hexa += "3";
			}
			if (hexCount == 4)
			{
				hexa += "4";
			}
			if (hexCount == 5)
			{
				hexa += "5";
			}
			if (hexCount == 6)
			{
				hexa += "6";
			}
			if (hexCount == 7)
			{
				hexa += "7";
			}
			if (hexCount == 8)
			{
				hexa += "8";
			}
			if (hexCount == 9)
			{
				hexa += "9";
			}
			if (hexCount == 10)
			{
				hexa += "a";
			}
			if (hexCount == 11)
			{
				hexa += "b";
			}
			if (hexCount == 12)
			{
				hexa += "c";
			}
			if (hexCount == 13)
			{
				hexa += "d";
			}
			if (hexCount == 14)
			{
				hexa += "e";
			}
			if (hexCount == 15)
			{
				hexa += "f";
			}

			
			hexCount = 0;
		}
		// line to add them into a string
		// line to take 2 of each and put them into 1 spot of the array
		// return array
		return null;
	}
	
}
